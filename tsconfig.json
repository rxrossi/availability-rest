{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2016",
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "esnext.asynciterable",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "build"
  },
  "exclude": ["node_modules", "build"]
}

